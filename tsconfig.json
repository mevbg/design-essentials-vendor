{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "types": ["node"],
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,
    "sourceMap": true
  },
  "include": ["src/index.ts"],
  "exclude": ["node_modules", "dist"]
}
